<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="min-h-screen bg-zinc-900 text-white">

    <!-- Navbar -->
    <div class="w-full flex justify-end p-6">
        <a href="/logout" class="bg-red-600 hover:bg-red-700 px-4 py-2 rounded-md text-sm">
            Logout
        </a>
    </div>

    <!-- Main Container -->
    <div class="max-w-3xl mx-auto px-6">

        <!-- Greeting -->
         <div class="flex item-start gap-4 mb-6">
            <img
                src="/images/uploads/<%= user.profilePic %>"
                alt="Profile Picture"
                class="w-20 h-20 rounded-full object-cover border-4 border-zinc-700"
            >
            <h1 class="text-2xl font-semibold mb-1 mt-5">
            Hello, <span class="text-blue-500"><%= user.username %></span> ðŸ‘‹
        </h1>

         </div>
        

        <!-- Create Post -->
        <div class="bg-zinc-800 p-4 rounded-lg mb-6">
            <form action="/createpost" method="post">
                <textarea
                    rows="3"
                    name="content"
                    placeholder="What's on your mind?"
                    class="w-full bg-zinc-700 text-white px-4 py-3 rounded-md outline-none resize-none mb-4"
                ></textarea>

                <input type="submit"
                    value="Post"
                    class="bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-md">
            </form>
        </div>

        <!-- Posts Section -->
        <h2 class="text-lg font-semibold mb-4">Your Posts</h2>

        <% if (user.posts.length === 0) { %>
            <p class="text-gray-400">No posts yet.</p>
        <% } %>

        <% user.posts.reverse().forEach(function(post) { %>
            <div class="bg-zinc-800 p-4 rounded-lg mb-4">
                <p class="text-sm text-gray-400 mb-2">
                    @<%= user.username %>
                </p>

                <p class="mb-3">
                    <%= post.content %>
                </p>
                <small class="mt-2 mb-2 inline-block "><%= post.likes.length %></small>

                <div class="flex gap-4 text-sm text-blue-500">
                    <a href="/like/<%= post._id %>">

                        <% if(post.likes.indexOf(user._id) !== -1){ %>
                            Unlike
                        <% } else { %>
                            Like
                        <% } %>
                    </a>
                    <a href="/edit/<%= post._id %>">edit</a>
                </div>
            </div>
        <% }) %>

    </div>

</body>
</html>
